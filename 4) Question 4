Question 4) Write a program to find first non-repeating character in a string using Queue.
            Sample I/P: a a b c Sample O/P: a -1 b b

Answer 4)
#include <iostream>
using namespace std;

#define SIZE 100

class Queue {
    char arr[SIZE];
    int front, rear;

public:
    Queue() {
        front = -1;
        rear = -1;
    }
    int isEmpty() {
        return (front == -1);
    }
    void enqueue(char ch) {
        if (rear == SIZE - 1) return;
        if (front == -1) front = 0;
        rear++;
        arr[rear] = ch;
    }
    void dequeue() {
        if (isEmpty()) return;
        if (front == rear)
            front = rear = -1;
        else
            front++;
    }
    char getFront() {
        if (isEmpty()) return '\0';
        return arr[front];
    }
};

int main() {
    Queue q;
    char str[SIZE];
    int freq[256] = {0};

    cout << "Enter characters (space separated): ";
    cin.getline(str, SIZE);

    cout << "\nOutput: ";

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ') continue;
        char ch = str[i];

        freq[ch]++;
        q.enqueue(ch);

        while (!q.isEmpty() && freq[q.getFront()] > 1)
            q.dequeue();

        if (q.isEmpty())
            cout << "-1 ";
        else
            cout << q.getFront() << " ";
    }

    cout << endl;
    return 0;
}
